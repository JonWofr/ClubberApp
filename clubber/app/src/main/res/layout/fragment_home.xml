<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/audience_band">


        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/clubber_icon"
            android:contentDescription="@string/clubber_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_text"
            android:textColor="@android:color/black"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:text="@string/wann"
            android:textSize="20sp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="20dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp">

            <EditText
                android:id="@+id/datePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="false"
                android:inputType="datetime"
                android:text="@string/datePicker"
                android:autofillHints="@string/datePicker"
                android:hint="@string/datePicker"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="28sp" />

            <Button
                android:id="@+id/eventBtnWithDate"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/ic_keyboard_arrow_right_black_24dp" />

        </LinearLayout>

</LinearLayout>